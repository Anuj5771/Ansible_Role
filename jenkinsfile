@Library('my-shared-lib@main') _

pipeline {
    agent any

    environment {
        SONARQUBE_URL = 'http://51.20.74.230:9000/'
        SONAR_PROJECT_KEY = 'demo'
    }

    stages {
        stage('Checkout and Build React') {
            steps {
                script {
                    checkoutSource('main', 'https://github.com/OT-MICROSERVICES/frontend.git')
                    buildReact()
                }
            }
        }

        stage('Run SonarQube Analysis') {
            steps {
                script {
                    sonarScan(SONAR_PROJECT_KEY)
                }
            }
        }
    }
}

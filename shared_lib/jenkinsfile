@Library('my-shared-lib@main') _

pipeline {
    agent any

    environment {
        SONARQUBE_URL = 'http://51.20.74.230:9000/'
        SONAR_PROJECT_KEY = 'demo'
    }

    stages {
        stage('Checkout') {
            steps {
                checkoutCode('main', 'https://github.com/OT-MICROSERVICES/salary-api.git')
            }
        }

        stage('Build App') {
            steps {
                buildApp()  // Ensure this function exists in your shared library
            }
        }

        stage('Sonar Scan') {
            steps {
                sonarScan("SONAR_PROJECT_KEY")  // Ensure this function exists in your shared library
            }
        }
    }
}

